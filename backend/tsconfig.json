{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./", // Ensure this is set to the root of your project
    "paths": {
      "*": ["src/*"] // Ensure this maps correctly to your `src` folder
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}